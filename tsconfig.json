{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "lib": [
      "ES2020"
    ],
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/js/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "lib",
    "test",
    "src/native",
    "src/mapping",
    "src/*.cc"
  ]
}